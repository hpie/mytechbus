<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <!--<ImageView-->
    <!--android:src="@drawable/header_logo"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="64dp"-->
    <!--android:scaleType="center"-->
    <!--android:background="#FFFFBB33"-->
    <!--android:contentDescription="@string/app_name" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptFullLabel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Full"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" : "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptFullRate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="60"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptFullPassengers"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="1"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" = "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptFullTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="120"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptHalfLabel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Half"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" : "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptHalfRate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="60"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptHalfPassengers"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="2"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" = "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptHalfTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="120"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptLuggageLabel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Luggage"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" : "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptLuggageRate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="60"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptLuggage"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="2"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" = "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptLuggageTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="120"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptDiscountLabel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Discount"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" : "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptDiscountRate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="60"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptTotalForDiscount"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="2"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=" = "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/proptDiscountApplied"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="120"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptTicketLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Total"
            android:textSize="26sp" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text=" : "-->
        <!--android:textSize="26sp" />-->

        <TextView
            android:id="@+id/proptTicketTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="120"
            android:textAlignment="textEnd"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proptDiscountedTicketLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Discounted Total"
            android:textSize="26sp" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text=" : "-->
        <!--android:textSize="26sp" />-->

        <TextView
            android:id="@+id/proptDiscountedTicketTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="120"
            android:textAlignment="textEnd"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>